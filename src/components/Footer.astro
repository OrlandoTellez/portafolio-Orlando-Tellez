---
import githubIcon from '../assets/iconos/github.svg';
import linkedinIcon from '../assets/iconos/linkedin.svg';
import logo from '../assets/iconos/logo.svg';
import { github, linkedIn } from '../data/redesSociales.js';
---

<footer>
    <div>
        <article>
            <img src={logo.src} alt="icono logo">
            <h3>Orlando TÃ©llez</h3>
        </article>
        <p>Desarrollador e ingeniero en sistemas</p>
        <article class="redes-sociales">
            <a href={github} target="_blank" rel="noopener noreferrer">
                <img src={githubIcon.src} alt="icono de GitHub" />
            </a>
            <a href={linkedIn} target="_blank" rel="noopener noreferrer">
                <img src={linkedinIcon.src} alt="icono de GitHub" />
            </a>
        </article>
    </div>
</footer>

<style>
    footer{
        width: 100%;
        color: white;
        display: grid;
        place-items: center;
        padding: 20px;
        background-color: var(--color-fuente-tag);
    }

    div{
        width: 100%;
        max-width: 1024px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }
    article{
        display: flex;
        align-items: center;
        gap: 10px;
    }

     @media only screen and (min-width: 1024px){
        div{
            width: 100%;
            max-width: 1024px;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }
     }
</style>