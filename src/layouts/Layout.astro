---
// Supports weights 200-700
import "@fontsource-variable/oswald";
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../secciones/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
 :root {
		--color-principal: #121216;
		--color-secundario: #ffc824;
		--color-alternar:  #ffc824;
		--color-alternar-svg-fondo: #2f291d;
		--color-card: #17171c;
		--color-fuente: #fafafa;
		--color-fuente-secundario: #c5c5c5;
		--color-blanco: #ffffff;
		--ancho-maximo: 1024px;

    --titulos: 2.5rem;
    --sub-titulos: 1.5rem;
	}

	[data-theme="light"] {
		--color-principal: #FDFAF6;
		--color-secundario: #ffc824;
		--color-alternar: black;
		--color-alternar-svg-fondo: #f4f4f5;
		--color-card: #fafafa;
		--color-fuente: #09090b;
		--color-fuente-secundario: #484643;
		--color-blanco: #ffffff;
		--ancho-maximo: 1024px;
	}

  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  
  html {
    /* font-family: system-ui, sans-serif; */
    font-family: "Oswald Variable", sans-serif;
    background-size: 224px;
    scroll-behavior: smooth;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  body{
    width: 100%;

		background-color: var(--color-principal);
		color: var(--color-fuente);
	}

	h1{
		font-size: 2.5rem;
	}

	p{
		color: var(--color-fuente);
		font-size: 1.2rem;
	}

	li{
		list-style: none;
	}

	a{
		text-decoration: none;
		color: var(--color-fuente);
	}
 

</style>
