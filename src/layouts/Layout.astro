---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from "../secciones/Header.astro"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	
	</body>
</html>

<style is:global>
	:root{
		color-scheme: light dark;
		--color-principal-oscuro: #010409;
		--color-secundario-oscuro: #161b22;
		--color-terciario-oscuro: #0093d3;

		--color-principal-claro: #B3C8CF;
		--color-secundario-claro: #ffffff;
		--color-terciario-claro: #ffffff;
		--blanco: white;
		--gris: rgb(185, 185, 185);
		

		--titulos: 2.2rem;
		--sub-titulos: 1.4rem;
		--textos: 1.2rem;
	}

	*{
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
		
		background-size: 224px;
		scroll-behavior: smooth;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	section{
		background-color: var(--color-secundario-oscuro);
	}

	.dark section{
		background-color: var(--color-secundario-claro);
		color: black;
	}

	header{
		background-color: var(--color-principal-oscuro);
		
	}

	.dark header{
		background-color: var(--color-principal-claro);
		border-bottom: 1px solid black;
	}

	.container-seccion--div a{
		color: white;
        
    }

	 .dark .container-seccion--div a{
		color: rgb(0, 0, 0);
        
    }

	.dark header .container-header nav ul li {
        color: rgb(0, 0, 0);
    }

	.dark header .container-header figure {
        color: rgb(0, 0, 0);
    }

	header nav{
		background-color: var(--color-principal-oscuro);

	}

	.dark header nav{
		background-color: var(--color-principal-claro);

	}

	#proyectos{
		background-color: var(--color-principal-oscuro);
	}

	.dark #proyectos{
		background-color: var(--color-principal-claro);
	}

	
	


	

</style>
