---
import Glass from "../components/Glass.astro";


---

<article>
    <Glass>
        <h2>En números</h2>

        <div class="container">
            <div>
                <span>+50</span>
                <p>Proyectos completados</p>
            </div>
            <div>
                <span>+1</span>
                <p>Año de experiencia</p>
            </div>
            <div>
                <span>+10</span>
                <p>Tecnologías dominadas</p>
            </div>
        </div>
    </Glass>
</article>

<style>
    h2{
        color: var(--color-fuente);
        padding-bottom: 1rem;
    }

    span{
        color: var(--color-resaltado);
        font-size: 1.7rem;
        font-weight: bold;
    }
    .container{
        display: flex;
        flex-direction: column;
    }
    .container div{
        width: 100%;
        display: grid;
        align-items: center;
        text-align: center;
        padding: 10px 0px;
    }

</style>