  <style>
    header{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        position: fixed;
        z-index: 0;
        padding: 20px;
        background-color: var(--color-principal);
        border-bottom: 1px solid white;
    }

    .container-header{
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1024px;
        color: aliceblue;
        
        
    }
    
    .container-header figure h2{
        font-size: 1.8em;
        text-align: start;
    }

    .menu-icon{
        position: relative;
        z-index: 15;
    }

    header nav{
        position: absolute;
        height: 100vh;
        width: 80vw;
        left: 0;
        top: 0;
        z-index: 20;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: var(--color-principal);
        transition: all ease .4s;
        
    }

    header .active{
        transform: translate(-600px);
    }

    header nav ul{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        font-size: var(--textos);
    }

    header nav ul li{
        list-style: none;
    }

    header nav ul li a{
        text-decoration: none;
        color: var(--white);
        transition: all .5s;
    }

    header nav ul li a:hover{
        list-style: none;
        color: var(--color-terciario);
        border-bottom: 2px solid var(--color-terciario);
    }

    #toggle{
            display: none;
    }

    .on{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        opacity: .5;
        z-index: 10;
        background-color: rgb(0, 0, 0);
        
    }

    .opacity{
        opacity: 0;
        display: none;
    }

    .theme label svg{
        cursor: pointer;
    }

    @media only screen and (min-width: 1024px){

        .menu-icon{
            display: none;
        }

        header nav{
            position: static;
            height: 100%;
            width: 100%;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            width: 68%;
            transition: all ease .0s;
        }

        header .active{
            transform: translate(0px);
        }

        header nav ul{
            display: flex;
            flex-direction: row;
            justify-content: end;
            gap: 30px;
            height: 100%;
            
        }

        header nav ul li a{
            color: var(--white);
            font-weight: 500;
        }
    }

    

  </style>

<script>
    let icono = document.querySelector(".menu-icon");
    let contenedor = document.querySelector(".nav");
    let opacidad = document.querySelector(".opacity");
    let light = document.querySelector("#toggle");
    icono.addEventListener("click", (e) => {
        contenedor.classList.toggle("active");
        opacidad.classList.toggle("opacity");
    })

    light.addEventListener("click", () => {
        
    })

  </script>