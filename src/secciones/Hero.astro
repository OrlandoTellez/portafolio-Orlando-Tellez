<section>
    <div class="container-section">
        <figure>
            <img src="img/gojo.jpg" alt="imagen">
        </figure>

        <div class="container-seccion--div">
            <h1>Hola. Soy Orlando Tellez</h1>
            <h2>Desarrollador full-stack con Javascript</h2>
            <div class="container-div--botones">
                <a class="proyectos" href="#proyectos">Proyectos</a>
                <a class="CV" href="#">Descargar CV</a>
            </div>
        </div>

    </div>
</section>

<style>
    section{
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: var(--color-secundario);
        padding-top: 100px;
    }

    .container-section{
        width: 100%;
        max-width: 1024px;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .container-section figure{
        width: 300px;
        box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
    }

    .container-section figure img{
        width: 100%;
        max-width: 100%;
        border-radius: 10px;
    }

    .container-seccion--div{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap: 20px;
    }

    .container-seccion--div h1{
        font-size: var(--titulos);
    }

    .container-seccion--div h2{
        font-size: var(--sub-titulos);
        color: var(--gris);
    }

    .container-seccion--div a{
		padding: 8px 12px;
		border: none;
		border-radius: 8px;
        text-decoration: none;
        color: var(--blanco);
        font-size: var(--textos);
    }

    
    .container-div--botones{
        display: flex;
        gap: 20px;
        
    }
    .container-div--botones .CV{
        background-color: var(--color-terciario);
        transition: all .3s ease;
    }

    .container-div--botones .CV:hover{
        background-color: white;
        color: var(--color-terciario);

    }
    
    .container-div--botones .proyectos{
        background-color: var(--color-secundario);
        transition: all .3s ease;
    }

    .container-div--botones .proyectos:hover{
        background-color: white;
        color: var(--color-terciario);
    }

    @media only screen and (min-width: 1024px){
        .container-section{
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: row-reverse;
            align-items: center;
            justify-content: space-between;
        }

        .container-seccion--div{
            display: flex;
            flex-direction: column;
            align-items: start;
            justify-content: center;
            text-align: center;
            gap: 20px;
        }

        .container-section figure{
            width: 400px;
        }

    .container-section figure img{
            width: 100%;
            max-width: 100%;
        }

    }

</style>