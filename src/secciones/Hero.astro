<style>
  section {
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 100px;
    padding-bottom: 40px;
    border-bottom: 1px solid var(--border-color);
  }

  .container-section {
    position: relative;
    z-index: 1;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 25px;
    max-width: 1024px;
  }

  .container-section figure {
    box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
    border-radius: 10px;
  }

  .container-section figure img {
    width: 200px;
    border-radius: 10px;
    height: 100%;
  }

  .container-seccion--div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 10px;
    padding: 0 10px;
    margin-top: 30px;
  }

  .container-seccion--div h1 {
    font-size: var(--titulos);
  }

  .container-seccion--div h2 {
    font-size: var(--sub-titulos);
    color: var(--color-fuente-secundario);
    text-align: center;
  }

  .container-seccion--div a {
    padding: 8px 25px;
    border: none;
    border-radius: 8px;
    text-decoration: none;
    font-size: 1.2rem;
    width: 100%;
  }

  .container-seccion--div .div-icons {
    display: flex;
    gap: 20px;
  }

  .container-seccion--div .icon {
    background-color: var(--color-principal);
    cursor: pointer;
    border-radius: 20px;
    padding: 0;
    width: 35px;
    height: 35px;
  }

  .container-seccion--div .icon:hover {
    background-color: white;
  }

  .container-seccion--div .icon svg {
    border-radius: 20px;
    padding: 0;
    margin: 0;
  }

  .container-div--botones {
    width: 100%;
    display: grid;
    grid-template-rows: repeat(5, 1fr);
    gap: 8px;
    place-items: center;
    margin-top: 20px;
  }

  .container-div--botones .CV {
    background-color: var(--color-terciario);
    transition: all 0.3s ease;
    color: var(--color-fuente);
    border: 2px solid var(--color-alternar);
  }

  .container-div--botones .CV:hover {
    background-color: white;
    color: black;
  }

  .container-div--botones .proyectos {
    background-color: var(--color-resaltado);
    transition: all 0.3s ease;
    color: var(--color-fuente);
    font-weight: bold;
  }

  .container-div--botones a{
    width: 100%;
  }

  .container-div--botones a:hover {
    background-color: white;
    color: black;
  }

  .description-tag {
    background-color: var(--color-secundario);
    border-radius: 50px;
    padding: 2px 20px;

    && p {
      color: var(--color-fuente);
    }
  }

  .container-div--botones .blog {
    border: 1px solid var(--border-color);
    grid-column: span 2 / span 2;
    grid-row-start: 2;
  }

  @media only screen and (min-width: 1024px) {
    section {
      height: 65vh;
      margin-top: 60px;
      padding-bottom: 100px;
    }

    .container-section {
      width: 100%;
      display: flex;
      flex-direction: row-reverse;
      justify-content: space-between;
      align-items: normal;
    }

    .container-seccion--div {
      display: flex;
      flex-direction: column;
      align-items: start;
      justify-content: center;
      gap: 10px;
    }

    .container-section figure {
      width: 300px;
    }

    .container-section figure img {
      width: 100%;
      height: 100%;
    }

    .container-seccion--div h2 {
      font-size: var(--sub-titulos);
      color: var(--color-fuente-secundario);
      text-align: start;
    }

    .container-div--botones {
      margin-top: 10px;
    }

    .container-div--botones {
    display: flex;
    gap: 8px;
    margin-top: 20px;
    width: 80%;
  }

  }
</style>
