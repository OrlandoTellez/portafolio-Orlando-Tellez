<style>
  section {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 100px;
    padding-bottom: 40px;
  }

  .container-section {
    position: relative;
    z-index: 1; 
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 25px;
    max-width: 1024px;
  }

  .container-section figure {
    width: 300px;
    box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
    border-radius: 10px;
    dijsplay: grid;
    place-items: center;
  }

  .container-section figure img {
    width: 100%;
    max-width: 100%;
    border-radius: 10px;
    height: 100%;
  }

  .container-seccion--div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 20px;
    padding: 0 20px;
  }

  .container-seccion--div h1 {
    font-size: var(--titulos);
  }

  .container-seccion--div h2 {
    font-size: var(--sub-titulos);
    color: var(--color-fuente-secundario);
  }

  .container-seccion--div a {
    padding: 8px 25px;
    border: none;
    border-radius: 8px;
    text-decoration: none;
    font-size: 1.2rem;
  }

  .container-seccion--div .div-icons {
    display: flex;
    gap: 20px;
  }

  .container-seccion--div .icon {
    background-color: var(--color-principal);
    cursor: pointer;
    border-radius: 20px;
    padding: 0;
    width: 35px;
    height: 35px;
  }

  .container-seccion--div .icon:hover {
    background-color: white;
  }

  .container-seccion--div .icon svg {
    border-radius: 20px;
    padding: 0;
    margin: 0;
  }

  .container-div--botones {
    display: flex;
    gap: 20px;
  }

  .container-div--botones .CV {
    background-color: var(--color-terciario);
    transition: all 0.3s ease;
    color: var(--color-fuente);

  }

  .container-div--botones .CV:hover {
    background-color: white;
    color: black;
  }

  .container-div--botones .proyectos {
    background-color: var(--color-secundario);
    transition: all 0.3s ease;
    color: black;
  }

  .container-div--botones .proyectos:hover {
      background-color: white;
      color: black;
  }

