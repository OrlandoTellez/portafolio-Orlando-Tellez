---
import { proyectos } from "../data/proyectos.js"
import Tarjetas from "../components/Tarjetas.jsx"
---

<section id="proyectos">
    <div class="container-section">
        <article>
            <h1>&ltProyectos/&gt;</h1>
        </article>
        <div class="container-tarjetas">
            {
              proyectos.map((proyecto) => (
                <Tarjetas 
                subtitulo={proyecto.subtitulo} 
                tecnologias={proyecto.tecnologias}
                texto={proyecto.texto} 
                img={proyecto.img}
                url={proyecto.url}
                github={proyecto.github}/>
              ))
            }
    </div>
</section>

<style>
    section{
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 75px 0px;
    }

    .container-section{
        width: 100%;
        max-width: 1024px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .container-section article h1{
        font-size: var(--titulos);
        margin-top: 20px;
        margin-bottom: 40px;
    }

    .container-tarjetas{
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        place-items: center;
        gap: 25px;
    }
</style>