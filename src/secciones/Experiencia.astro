---
import Glass from "../components/Glass.astro"
import trabajoIcon from "../assets/iconos/trabajo.svg"

interface ExperienceItem {
  title: string
  company: string
  period: string
  description: string
}

const experienceData: ExperienceItem[] = [
  {
    title: "Senior Full Stack Developer",
    company: "Tech Startup Inc.",
    period: "2022 - Presente",
    description: "lorem impsum",
  },
  {
    title: "Full Stack Developer",
    company: "Digital Agency",
    period: "2020 - 2022",
    description: "lorem impsum",
  },
  {
    title: "Frontend Developer",
    company: "Software Solutions",
    period: "2019 - 2020",
    description: "lorem impsum",
  },
]
---

<section class="experience-container">
    <Glass>
      <div class="title-container">
        <img src={trabajoIcon.src} alt="trabajo icon">
        <h2 class="title">Experiencia Laboral</h2>
      </div>
        <div class="timeline">
          <!-- Timeline line -->
          <div class="line"></div>
      
          <div class="items">
            {experienceData.map((item, index) => (
              <div class="item">
                <div class="dot"></div>
      
                <div class="content">
                  <div class="header">
                    <div>
                      <h2 class="job-title">{item.title}</h2>
                      <h3 class="company">{item.company}</h3>
                    </div>
                    <span class="period">{item.period}</span>
                  </div>
                  <p class="description">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
    </Glass>
</section>

<style>
  .experience-container {
    width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

  }

  .title-container{
    display: flex;
    margin-bottom: 2rem;
    gap: 20px;
  }

  .title {
    font-size: 1.9rem;
    font-weight: bold;
    color: white;
  }

  .timeline {
    position: relative;
  }

  .line {
    position: absolute;
    left: 16px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #374151; /* gris */
  }

  .items {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .item {
    position: relative;
    display: flex;
    align-items: flex-start;
  }

  .dot {
    position: absolute;
    left: 0;
    width: 32px;
    height: 32px;
    background: #3b82f6; /* azul */
    border: 4px solid #111827;
    border-radius: 50%;
    z-index: 10;
  }

  .content {
    margin-left: 4rem;
    flex: 1;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.5rem;
    gap: 1rem;
  }

  .job-title {
    font-size: 1.3rem;
    font-weight: bold;
    color: white;
    margin-bottom: 0.25rem;
  }

  .company {
    font-size: 1.1rem;
    color: #3b82f6;
    font-weight: 500;
  }

  .period {
    font-size: 0.9rem;
    color: #9ca3af; /* gris claro */
    white-space: nowrap;
  }

  .description {
    color: #d1d5db;
    line-height: 1.6;
    font-size: 1rem;
  }

  
</style>
